---
import ProfileImage from "./ProfileImage.astro";
const { name, image, description, id, modalId } = Astro.props;
---

<div
  id={id}
  class="flex flex-col gap-4 items-center cursor-pointer hover:scale-110 transition-all duration-300"
  data-modal-target={modalId}
  data-modal-toggle={modalId}
>
  <ProfileImage name={name} image={image} size="w-40 h-40" />
  <span>{name}</span>
</div>

<div
  id={modalId}
  tabindex="-1"
  class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full overlay w-full"
>
  <div class="relative w-full max-h-full max-w-xl">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div
        class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600"
      >
        <h2 class="text-2xl text-center w-full">{name}</h2>
        <button
          type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          data-modal-hide={modalId}
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>

      <div class="p-4 flex flex-col items-center gap-4">
        <img
          class="h-80 w-80 rounded-full object-cover"
          src={image}
          alt={name}
        />
        <p class="p-8">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
